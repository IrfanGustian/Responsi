<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserMainActivity">

    <TextView
        android:id="@+id/titlecard1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Temukan Jurnalmu"/>

    <TextView
        android:id="@+id/titlecard2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Dibawah Sini"
        android:textSize="35dp"
        android:layout_below="@+id/titlecard1"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent"
        app:cardCornerRadius="40dp"
        app:cardElevation="15dp"
        android:layout_below="@+id/titlecard2">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycle_view_user"
            android:layout_below="@+id/titlecard2"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fablgooutuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="40dp"
            android:src="@drawable/ic_logout_svgrepo_com"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_hitunguser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="40dp"
            android:src="@drawable/ic_baseline_calculate_24"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:src="@drawable/ic_baseline_arrow_drop_up_24"
            android:layout_margin="40dp"/>

    </androidx.cardview.widget.CardView>





</RelativeLayout>